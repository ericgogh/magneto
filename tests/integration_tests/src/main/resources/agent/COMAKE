ROOTDIR('../../../../../../../../')
CXXFLAGS('-g -W -Wall -Dprivate=public  -Dprotected=public -Wno-deprecated -Wno-invalid-offsetof -fno-builtin-memcmp -DONLINE_TEST -DUT_TEST -std=c++11 -DDEBUG_MODE -DMONITOR -O2')

APP('bin/agent',
    ' src/*.cpp '
    )

